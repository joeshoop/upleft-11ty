<header class="container --w-md">
	<div class="intro flow --py-lg">
		{% if title == "Index" %}
		<h1>Studio Upleft <span class="--text-muted">is the office of Joe Shoop, a designer and tinkerer in Seattle thinking about simplicty in complex interactivity.</span></h1>
		{% else %}
		<div>
			<ul>
			{% assign breadcrumbs = page.url | split: '/' | reverse %}
			{% assign trail_length = breadcrumbs | size | minus: 1 %}
			{% assign pathHome = breadcrumbs | slice: 0, trail_length | reverse %}
				<li>
					<h1><a href="/">Studio Upleft</a></h1>
				 </li>
			{% for crumb in pathHome %}
			{{ pathHome | join: "/" }}
				{% assign words = crumb | split: '-' %}
					<li>
						{% if forloop.index < trail_length %}
							<a href="#">&nwarr; 
								{% for word in words %}
									{{ word | capitalize }}
								{% endfor %}
							</a>
						{% endif %}
					  </li>
			{% endfor %}
			</ul>
		{% endif %}
		</div>
	</div>
	<nav>
		<ul class="nav-items">
			{% if title == "Index" %}
			<li class="nav-item --active">
				<a class="nav-item-content" id="nav-home" href="/">Work</a>
			</li>
			{% else %}
			<li class="nav-item">
				<a class="nav-item-content --text-muted" id="nav-home" href="/">Work</a>
			</li>
			{% endif %}
			{% if title == "About" %}
			<li class="nav-item --active">
				<a class="nav-item-content" id="nav-about" href="/about/">About</a>
			</li>
			{% else %}
			<li class="nav-item">
				<a class="nav-item-content --text-muted" id="nav-about" href="/about/">About</a>
			</li>
			{% endif %}
			{% if title == "Scraps" %}
			<li class="nav-item --active">
				<a class="nav-item-content" id="nav-scraps" href="/scraps/">Scraps</a>
			</li>
			{% else %}
			<li class="nav-item">
				<a class="nav-item-content --text-muted" id="nav-scraps" href="/scraps/">Scraps</a>
			</li>
			{% endif %}
		</ul>
	</nav>
</header>